@model IEnumerable<AdoRelation.Models.Employee>

<button class="btn btn-primary mb-3 text-white"><a class="text-white" href="@Url.Action("Create")">Add Employee</a> </button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Pin</th>
            <th scope="col">Department Name</th>
            <th scope="col">Action</th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Pin</td>
                <td>@item.Department.DepartmentName</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id =item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
               
            </tr>
        }
       
       
    </tbody>
</table>